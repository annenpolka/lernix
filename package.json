{
  "name": "lernix-question-generator",
  "version": "0.1.0",
  "description": "問題生成サンプルプロジェクト for Lernix",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/cli.ts",
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "dev:verbose": "NODE_DEBUG=* node --loader ts-node/esm src/cli.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run **/*.integration.test.ts"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "typescript": "^5.3.2",
    "vitest": "^3.0.7"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "ts-node": "^10.9.2",
    "vite": "^6.2.0"
  }
}